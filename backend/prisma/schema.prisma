generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id              Int      @id @default(autoincrement())
  category        Category
  name            String   @unique
  imageUrl        String
  objectOneX      Int
  objectOneY      Int
  objectTwoX      Int
  objectTwoY      Int
  objectThreeX    Int
  objectThreeY    Int
  createdAt       DateTime @default(now())

  scores          Score[]
}


model Score {
  id            Int       @id @default(autoincrement())
  game          Game      @relation(fields: [gameId], references: [id])
  gameId        Int
  playerName    String
  time          Int
  createdAt     DateTime  @default(now())
}

enum Category {
  OFFICE
  HOTEL
  FOOD
}
